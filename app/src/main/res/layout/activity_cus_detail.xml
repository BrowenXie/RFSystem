<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.wen.rfsystem.resDetail">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gridLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="顧客姓名"
            android:id="@+id/cusnameText"
            android:layout_row="0"
            android:layout_column="0" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="請輸入姓名"
            android:ems="10"
            android:id="@+id/cusnameEDText"
            android:layout_row="0"
            android:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="顧客電話"
            android:id="@+id/custelText"
            android:layout_row="1"
            android:layout_column="0" />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/custelEDText"
            android:layout_weight="1"
            android:hint="請輸入連絡電話"
            android:layout_row="1"
            android:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="性別"
            android:id="@+id/cussexText"
            android:layout_row="2"
            android:layout_column="0" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cusexEDText"
            android:layout_row="2"
            android:layout_column="1"
            android:hint="先生/小姐" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="VIP等級:"
            android:id="@+id/cusvipText"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_below="@+id/gridLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/cusVIPeditText"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_alignBottom="@+id/textView12"
            android:layout_alignRight="@+id/gridLayout"
            android:layout_alignEnd="@+id/gridLayout"
            android:hint="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="顧客地址："
            android:id="@+id/cusaddressText"
            android:layout_row="5"
            android:layout_column="0" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/cusaddreditText"
            android:hint="請輸入預約時間"
            android:layout_row="5"
            android:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="顧客生日："
            android:id="@+id/cusbirthdayText"
            android:layout_row="6"
            android:layout_column="0" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/cusBireditText"
            android:layout_row="6"
            android:layout_column="1"
            android:hint="請輸入預約日期"
            android:onClick="setDate"
            android:clickable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="備註："
            android:id="@+id/cusPSText"
            android:layout_weight="0.01"
            android:layout_row="7"
            android:layout_column="0" />

        <EditText
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:id="@+id/cusPSEDText"
            android:layout_weight="0.04"
            android:hint="請輸入備註"
            android:allowUndo="true"
            android:layout_row="7"
            android:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="黑名單"
            android:id="@+id/textView22"
            android:layout_row="8"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="黑名單理由"
            android:id="@+id/cusbsText"
            android:layout_row="9"
            android:layout_column="0" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="黑名單"
            android:id="@+id/checkBox3"
            android:layout_row="8"
            android:layout_column="1"
            android:checked="false" />

        <EditText
            android:layout_width="209dp"
            android:layout_height="wrap_content"
            android:id="@+id/cusawSeditText"
            android:layout_row="9"
            android:layout_column="1"
            android:hint="澳洲來戶" />

    </GridLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/relativeLayout">

        <Button
            android:layout_width="110dp"
            android:layout_height="60dp"
            android:text="修改"
            android:id="@+id/cuseditbutton"
            android:layout_gravity="center_vertical"
            android:onClick="edit"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="110dp"
            android:layout_height="60dp"
            android:text="返回"
            android:id="@+id/cusdelbutton"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:onClick="del" />

    </RelativeLayout>


</RelativeLayout>


